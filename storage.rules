rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function orderDoc(orderId) {
      return firestore.get(/databases/(default)/documents/orders/$(orderId));
    }

    function isOrderParticipant(orderId) {
      return isSignedIn()
        && orderDoc(orderId).exists()
        && (
          orderDoc(orderId).data.clientId == request.auth.uid ||
          (orderDoc(orderId).data.sellerId is string && orderDoc(orderId).data.sellerId == request.auth.uid)
        );
    }

    // User avatar uploads.
    // Stored as: avatars/{userId}/{filename}
    match /avatars/{userId}/{allPaths=**} {
      // Allow authenticated users to read their own avatar.
      allow read: if isSignedIn() && request.auth.uid == userId;

      // Allow authenticated users to write (upload/update/delete) only their own avatar files.
      allow write: if isSignedIn()
                   && request.auth.uid == userId
                   // Basic file validations.
                   && request.resource.size < 3 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Order scoped uploads.
    // Stored as: orders/{orderId}/{userId}/{kind}/{filename}
    match /orders/{orderId}/{userId}/{kind}/{allPaths=**} {
      allow read: if isOrderParticipant(orderId);

      allow write: if isOrderParticipant(orderId)
        && isSignedIn()
        && request.auth.uid == userId
        && request.resource.size < 25 * 1024 * 1024;
    }

    // Deny everything else by default.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
