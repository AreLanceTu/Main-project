{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/razorpay-supabase-demo.html",
        "destination": "/razorpay-supabase-demo.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
